<h3>My Bookmarks</h3>
    <%= link_to 'Create a bookmark', new_list_bookmark_path(@list), class: "btn btn-light"  %>
  </div>
  <div class="movie-card">
      <% @bookmarks.each do |bookmark| %>
        <div class="list-group-item">
          <%= image_tag bookmark.movie.poster_url, class:"poster-img" %>
          <div class="movie-card-text">
            <h4><%= bookmark.movie.title %><%= bookmark.movie.rating %></h4>
            <p><%= bookmark.movie.overview %></p>
            <h4><%= bookmark.comment %></h4>

            <div class="show-delete">
              <%= link_to "See More Movies", movie_path(bookmark.movie) %>
              <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
          </div>
